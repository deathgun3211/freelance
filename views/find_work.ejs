<body>
<div id="home"></div>
<nav class="navbar  ">
    <div class="container-fluid">
        <a class="navbar-brand" href="#home">Freelance for poor</a>
        <div class="main">
            <a class="button_main" href="/find-work">Find work</a>
            <a class="button_main" href="/">About us</a>
        </div>
        <%if (isAuthenticated) { %>
            <div class="login" id="loginNav">
                <a class="button_main" href="/add-work">Add work</a>
                <img src="/img/user.png" class="user_img">
                <a class="user_text" href="/logout">User</a>
            </div>
        <% } else{ %>
            <div class="login" id="loginNav">
                <a class="button_reg" href="/register">Get started</a>
                <a class="button_reg" href="/login">Login</a>
            </div>
        <% } %>
    </div>
</nav>
<div class="search">
    <form class="searchbar" method="post" action="/find-work">
            <input class="search_input" type="search" name="search" placeholder="Search...">
            <button class="baton_search"> <i class="fas fa-search"></i></button>
    </form>
</div>
    <% for (var i = 0; i < aplications.length; i++) {%>
    <div class="card">
            <h5 class="card-header"><%=aplications[i].title%></h5>
            <div class="card-body">
                <p class="card-text"><%=aplications[i].description%></p>
                <h5 class="card-title"><%=aplications[i].requiredSkills%></h5>
                <h4> <%=aplications[i].price%> p/h$</h4>
            </div>
        <form method="post" action="/find-work/take-work"></form>
            <button class="buget_el_baton">Take it</button>
    </div>
    <%}%>


